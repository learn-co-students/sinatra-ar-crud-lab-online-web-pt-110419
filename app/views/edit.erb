<h1>Update Article #: <%=@article.id%></h1>
<form action='/articles/<%=@article.id%>' method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2><label for="title">Update Title: </label><input type="text" name="title" id="title" value="<%=@article.title%>"></h2>
  <h3><label for="content">Update Content: <input type="text" name="content" id="content" value="<%=@article.content%>"></label></h3>
  <label for="submit"><input type="submit" id="submit" value="Update"></label>

</form>
